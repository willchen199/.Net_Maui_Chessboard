<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChessApp.SettingsPage"
             Title="SettingsPage"
             BackgroundColor="Wheat">
    <VerticalStackLayout VerticalOptions="Center">
        <HorizontalStackLayout HorizontalOptions="Center"
                               BackgroundColor="#8F2C09"
                               WidthRequest="350">
            <Label x:Name="SoundEffectsLabel"
                        Margin="15"
                        FontFamily="Times New Roman"
                        FontSize="35"
                        HeightRequest="45"
                        HorizontalOptions="Center"
                        Text="Sound Effects"
                        TextColor="wheat"
                        WidthRequest="225" />
            <Switch x:Name="SoundEffects"
                    IsToggled="true"
                    Toggled="SoundFXToggled"
                    HorizontalOptions="CenterAndExpand"
                    VerticalOptions="CenterAndExpand"
                    BackgroundColor="#8F2C09"
                    OnColor="Black"
                    ThumbColor="#03C400"/>
        </HorizontalStackLayout>

        <HorizontalStackLayout HorizontalOptions="Center"
                               BackgroundColor="#8F2C09"
                               WidthRequest="350">
            <Label x:Name="MoveHintsLabel"
                        Margin="15"
                        FontFamily="Times New Roman"
                        FontSize="35"
                        HeightRequest="45"
                        HorizontalOptions="Center"
                        Text="Move Hints"
                        TextColor="wheat"
                        WidthRequest="225" />
            <Switch x:Name="MoveHints"
                    IsToggled="true"
                    Toggled="HintsToggled"
                    HorizontalOptions="CenterAndExpand"
                    VerticalOptions="CenterAndExpand"
                    BackgroundColor="#8F2C09"
                    OnColor="Black"
                    ThumbColor="#03C400"/>
        </HorizontalStackLayout>

        <HorizontalStackLayout HorizontalOptions="Center"
                               BackgroundColor="#8F2C09"
                               WidthRequest="350">
            <Label x:Name="ConfirmMoveLabel"
                        Margin="15"
                        FontFamily="Times New Roman"
                        FontSize="35"
                        HeightRequest="45"
                        HorizontalOptions="Center"
                        Text="Confirm Move"
                        TextColor="wheat"
                        WidthRequest="225" />
            <Switch x:Name="ConfirmMove"
                    IsToggled="true"
                    Toggled="ConfirmToggled"
                    HorizontalOptions="CenterAndExpand"
                    VerticalOptions="CenterAndExpand"
                    BackgroundColor="#8F2C09"
                    OnColor="Black"
                    ThumbColor="#03C400"/>
        </HorizontalStackLayout>

        <HorizontalStackLayout HorizontalOptions="Center"
                               BackgroundColor="#8F2C09"
                               WidthRequest="350">
            <Label x:Name="DarkModeLabel"
                        Margin="15"
                        FontFamily="Times New Roman"
                        FontSize="35"
                        HeightRequest="45"
                        HorizontalOptions="Center"
                        Text="Dark Mode"
                        TextColor="wheat"
                        WidthRequest="225" />
            <Switch x:Name="DarkMode"
                    IsToggled="true"
                    Toggled="DarkModeToggled"
                    HorizontalOptions="CenterAndExpand"
                    VerticalOptions="CenterAndExpand"
                    BackgroundColor="#8F2C09"
                    OnColor="Black"
                    ThumbColor="#03C400"/>
        </HorizontalStackLayout>

        <HorizontalStackLayout HorizontalOptions="Center"
                               BackgroundColor="#8F2C09"
                               WidthRequest="350">
            <Label x:Name="TurnTimerLabel"
                        Margin="15"
                        FontFamily="Times New Roman"
                        FontSize="35"
                        HeightRequest="45"
                        HorizontalOptions="Center"
                        Text="Turn Timer"
                        TextColor="wheat"
                        WidthRequest="225" />
            <Switch x:Name="TurnTimer"
                    IsToggled="true"
                    Toggled="TimerToggled"
                    HorizontalOptions="CenterAndExpand"
                    VerticalOptions="CenterAndExpand"
                    BackgroundColor="#8F2C09"
                    OnColor="Black"
                    ThumbColor="#03C400"/>
        </HorizontalStackLayout>
        

