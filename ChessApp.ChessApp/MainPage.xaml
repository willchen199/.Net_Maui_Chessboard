<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChessApp.MainPage">

    <!-- This is the outermost Grid, which contains the entire chessboard layout. -->
    <Grid>
        <!-- Define the row structure for this outer Grid. -->
        <Grid.RowDefinitions>
            <!-- Row 0: Automatically sized row for the title -->
            <RowDefinition Height="Auto" />
            <!-- Row 1: Star-sized row for the chessboard grid -->
            <RowDefinition Height="*" />
            <!-- Row 2: Star-sized row for additional content (if needed) -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title Label -->
        <Label Text="Chessboard" FontSize="Large" HorizontalOptions="Center" VerticalOptions="Center" />

        <!-- This is the inner Grid that represents the chessboard itself. -->
        <Grid Grid.Row="1" BackgroundColor="Wheat">
            <!-- Define the row structure for the inner Grid. -->
            <Grid.RowDefinitions>
                <!-- Row 0: Star-sized row for the first row of the chessboard -->
                <RowDefinition Height="*" />
                <!-- Row 1: Star-sized row for the second row of the chessboard -->
                <RowDefinition Height="*" />
                <!-- Row 2: Star-sized row for the third row of the chessboard -->
                <RowDefinition Height="*" />
                <!-- Row 3: Star-sized row for the fourth row of the chessboard -->
                <RowDefinition Height="*" />
                <!-- Row 4: Star-sized row for the fifth row of the chessboard -->
                <RowDefinition Height="*" />
                <!-- Row 5: Star-sized row for the sixth row of the chessboard -->
                <RowDefinition Height="*" />
                <!-- Row 6: Star-sized row for the seventh row of the chessboard -->
                <RowDefinition Height="*" />
                <!-- Row 7: Star-sized row for the eighth row of the chessboard -->
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Define the column structure for the inner Grid. -->
            <Grid.ColumnDefinitions>
                <!-- Column 0: Star-sized column for the first column of the chessboard -->
                <ColumnDefinition Width="*" />
                <!-- Column 1: Star-sized column for the second column of the chessboard -->
                <ColumnDefinition Width="*" />
                <!-- Column 2: Star-sized column for the third column of the chessboard -->
                <ColumnDefinition Width="*" />
                <!-- Column 3: Star-sized column for the fourth column of the chessboard -->
                <ColumnDefinition Width="*" />
                <!-- Column 4: Star-sized column for the fifth column of the chessboard -->
                <ColumnDefinition Width="*" />
                <!-- Column 5: Star-sized column for the sixth column of the chessboard -->
                <ColumnDefinition Width="*" />
                <!-- Column 6: Star-sized column for the seventh column of the chessboard -->
                <ColumnDefinition Width="*" />
                <!-- Column 7: Star-sized column for the eighth column of the chessboard -->
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Each square on the chessboard is represented by an Image control. -->
            <!-- Replace the Source property with the actual image source for each square. -->
            <!-- For example, Source="your_image_source_1.jpg" should be replaced with the image you want to use. -->
            <!-- Aspect="AspectFill" ensures that the images maintain their aspect ratio and fill the grid cell. -->

            <!-- Row 0 -->
            <Image Grid.Row="0" Grid.Column="0" Source="white_chess_tile.png" Aspect="AspectFill" />
            <Image Grid.Row="0" Grid.Column="1" Source="brown_chess_tile.png" Aspect="AspectFill" />
            <Image Grid.Row="0" Grid.Column="2" Source="white_chess_tile.png" Aspect="AspectFill" />
            <Image Grid.Row="0" Grid.Column="3" Source="brown_chess_tile.png" Aspect="AspectFill" />
