            <Image Grid.Row="0" Grid.Column="7" Source="brown_chess_tile.png" Aspect="AspectFill" />
            <Image Grid.Row="0" Grid.Column="8" Source="brown_chess_tile.png" Aspect="AspectFill" />
            <!-- Continue adding Image controls for the rest of the first row -->

